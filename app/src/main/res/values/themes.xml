<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StateDataManagement" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/text_color_common</item>
        <item name="colorOnSurface">@color/text_color_common</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="fontFamily">@font/chivo_family</item>
        <item name="android:fontFamily">@font/chivo_family</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/divider_color</item>
        <item name="colorControlHighlight">@color/divider_color</item>

        <!-- Customize your theme here. -->


